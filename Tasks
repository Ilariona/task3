   var login=prompt('Кто пришел','');
if(login == 'Админ'){

var password=prompt('пароль','');

if(password == 'зеленый пластелин'){
alert('Добро пожаловать');
}else if (password == null){
alert('Вход отменен');
}else{alert('пароль не верен');
}
 }else if (login == null){
alert('вход отменен');

}else{
alert('я вас не знаю');
}

  </script>
</body>

</html>

